@model Website.Models.Spotify.GetPlaylistsViewModel

<h2 class="float-left">Step 2</h2>
<a class="float-right btn btn-primary btn-lg text-white" id="get-playlists">Get Playlists</a>

<div class="clearfix">Retrieve your playlists.</div>

<ul class="border">
    <li>Get a list of all playlists and present as a checkable list</li>
    <li>Save new access token returned by API</li>
</ul>

@if (Model != null)
{
    <hr />

    <div id="playlists" class="row">
        @foreach (var playlist in Model.Playlists)
        {
            <div class="col-4 list-group-item">
                <!-- Default checked -->
                <div class="checkbox checkbox-css">
                    <input type="checkbox" id="@playlist.ID" value="@playlist.ID">
                    <label for="@playlist.ID">@playlist.Name</label>
                </div>
            </div>
        }
    </div>
}
